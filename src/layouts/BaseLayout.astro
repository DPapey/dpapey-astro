---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import Main from "../components/Main.astro";

interface Props {
	title: string;
	description: string;
	image?: string;
}

const {
	title,
	description = "The home of DPapey",
	image = "/Atom.svg",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="antialiased scroll-smooth min-h-screen">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href={image} />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />

		<!-- OG Tags -->
		<meta property="og:title" content={`DPapey | ${title}`} />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="DPapey" />
		<title>DPapey | {title}</title>

		<ClientRouter />
		<script>
			if (!localStorage.getItem("theme")) {
				localStorage.setItem("theme", "dark");
			}
			if (localStorage.getItem("theme") === "dark") {
				document.documentElement.classList.add("dark");
			}
		</script>
	</head>

	<body
		class="min-h-screen grid grid-rows-[auto,1fr,auto] dark:bg-dark-radial bg-light-radial bg-neutral-100 dark:bg-slate-900 overflow-x-hidden"
	>
		<Nav />
		<slot />
		<Footer />
	</body>
</html>
