---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Main from "../../components/Main.astro";
import { getCollection, render } from "astro:content";
import H1 from "../../components/H1.astro";
import NavLink from "../../components/NavLink.astro";
import { Image } from "astro:assets";

//Getting the paths to the posts (value defined in Astro.props)
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}
//Declaring values from the prop
const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <Main>
    <div class="max-w-4xl mx-auto px-4 md:px-8 lg:px-12">
      <div
        class="text-neutral-700 dark:text-neutral-200 text-2xl mb-6 -space-y-2"
      >
        <NavLink path="/blog" title="Back to all Blog posts." />
      </div>

      <!-- Blog Post Container -->
      <article class="w-full text-center">
        <!-- Image -->
        <div class="flex justify-center">
          <Image
            src={post.data.cover}
            width={1200}
            height={800}
            class="w-full max-w-3xl rounded-lg shadow-xl"
            alt={post.data.description}
          />
        </div>

        <!-- Text Content -->
        <div
          class="prose prose-xl prose-p:font-semibold prose-p:text-left prose-h2:text-left dark:prose-invert p-4 max-w-3xl"
        >
          <H1 title={post.data.title} class="text-5xl" />
          <Content />
        </div>
      </article>
    </div>
  </Main>
</BaseLayout>
