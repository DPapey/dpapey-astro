---
import NavLink from "./NavLink.astro";
import { Icon } from "astro-icon/components";
import ThemeToggle from "../components/ThemeToggle.astro";
import Hamburger from "./Hamburger.tsx";
---

<header
  class="top-0 left-0 w-full relative overflow-hidden z-50 bg-white/50 dark:bg-gray-900/60 transition-colors duration-300"
>
  <div class="flex justify-between items-center px-10 py-4 w-full">
    <!-- Desktop Navigation -->
    <div class="rounded-full px-8 py-2 border-slate-500">
      <nav class="hidden sm:flex">
        <ul class="flex space-x-4 sm:space-x-6 lg:space-x-6">
          <li><NavLink path="/" title="Home" /></li>
          <li><NavLink path="/blog" title="Blog" /></li>
          <li><NavLink path="/work" title="Work" /></li>
          <li><NavLink path="/about" title="About" /></li>
        </ul>
      </nav>
    </div>

    <!-- Icons and Hamburger -->
    <div class="flex items-center space-x-4 sm:space-x-6">
      <a
        href="https://twitch.tv/dpapey"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon
          name="twitch"
          class="size-8 text-neutral-600 dark:text-neutral-300 hover:opacity-50 transition"
        />
      </a>
      <a
        href="https://github.com/dpapey"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon
          name="github"
          class="size-8 text-neutral-600 dark:text-neutral-300 hover:opacity-50 transition"
        />
      </a>
      <a href="/gallery">
        <Icon
          name="film-strip"
          class="size-8 text-neutral-600 dark:text-neutral-300 hover:opacity-50 transition"
        />
      </a>
      <ThemeToggle />

      <!-- React Hamburger Component -->
      <Hamburger
        client:load
        links={[
          { path: "/", title: "Home" },
          { path: "/blog", title: "Blog" },
          { path: "/work", title: "Work" },
          { path: "/about", title: "About" },
        ]}
      />
    </div>
  </div>
</header>
